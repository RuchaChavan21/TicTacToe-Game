<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#2C2C54">

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player One's Turn"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:layout_marginBottom="20dp"
        android:contentDescription="Game status"/>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3">

        <Button
            android:id="@+id/button_00"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textSize="30sp"
            android:background="#42275A"
            android:textColor="#FFC312"
            android:contentDescription="Grid button 1"/>

        <Button
            android:id="@+id/button_01"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textSize="30sp"
            android:background="#42275A"
            android:textColor="#FFC312"
            android:contentDescription="Grid button 2"/>

        <Button
            android:id="@+id/button_02"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textSize="30sp"
            android:background="#42275A"
            android:textColor="#FFC312"
            android:contentDescription="Grid button 3"/>

        <Button
            android:id="@+id/button_10"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textSize="30sp"
            android:background="#42275A"
            android:textColor="#FFC312"
            android:contentDescription="Grid button 4"/>

        <Button
            android:id="@+id/button_11"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textSize="30sp"
            android:background="#42275A"
            android:textColor="#FFC312"
            android:contentDescription="Grid button 5"/>

        <Button
            android:id="@+id/button_12"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textSize="30sp"
            android:background="#42275A"
            android:textColor="#FFC312"
            android:contentDescription="Grid button 6"/>

        <Button
            android:id="@+id/button_20"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textSize="30sp"
            android:background="#42275A"
            android:textColor="#FFC312"
            android:contentDescription="Grid button 7"/>

        <Button
            android:id="@+id/button_21"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textSize="30sp"
            android:background="#42275A"
            android:textColor="#FFC312"
            android:contentDescription="Grid button 8"/>

        <Button
            android:id="@+id/button_22"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textSize="30sp"
            android:background="#42275A"
            android:textColor="#FFC312"
            android:contentDescription="Grid button 9"/>
    </GridLayout>

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:layout_marginTop="20dp"
        android:textColor="#FFFFFF"
        android:contentDescription="Reset the game"/>

</LinearLayout>
